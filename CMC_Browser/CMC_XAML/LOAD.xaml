<Window x:Class="CMC_Browser.CMC_XAML.LOAD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMC_Browser.CMC_XAML"
        mc:Ignorable="d"
        Title="Loading CMC..." Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0" RadiusX="1">
                <GradientStop Color="#FF1E2730"/>
                <GradientStop Color="Black" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Label Content="Loading..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,130,0,0" Width="76" Foreground="White" Height="33" FontSize="16"/>
        <Label Content="Version 0.2a" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,240,0,0" Width="69" Foreground="White" Height="31" FontSize="10"/>
        <Label Content="CMC Monitor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="66,42,0,0" Width="153" Foreground="White" Height="42" FontSize="24"/>
        <ProgressBar x:Name="prgLoading" HorizontalAlignment="Left" Height="10" Margin="32,115,0,0" VerticalAlignment="Top" Width="229" Value="10"/>

    </Grid>
</Window>
